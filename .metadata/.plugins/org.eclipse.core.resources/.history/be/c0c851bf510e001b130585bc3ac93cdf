#include <pthread.h>

#ifndef PROCESS_H_
#define PROCESS_H_

class Process {
private:
	int count;
	const static int LIMIT = 10;
	Process* fptr;
	void *run(void *func(void* nonused));
public:
	Process();

	void *consumer(void *nonused);
	void *producer(void *nonused);
	void start(void *func(void *nonused));
};

#endif /* PROCESS_H_ */
