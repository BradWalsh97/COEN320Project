#include <pthread.h>

#ifndef PROCESS_H_
#define PROCESS_H_

class Process {
private:
	int count;
	const int LIMIT;
	pthread_mutex_t mutex;
	pthread_cond_t condvar;
public:
	Process();

	void *consumer(void *nonused);
	void *producer(void *nonused);
};

#endif /* PROCESS_H_ */
