#include <pthread.h>

#ifndef PROCESS_H_
#define PROCESS_H_

class Process {
private:
	int count;
	const static int LIMIT = 10;
	pthread_mutex_t mutex = PTHREAD_MUTEX_INITIALIZER;
	pthread_cond_t condvar = PTHREAD_COND_INITIALIZER;
public:
	Process();

	void *consumer(void *nonused);
	void *producer(void *nonused);
};

#endif /* PROCESS_H_ */
