#include <cstdlib>
#include <iostream>
#include <pthread.h>
#include "Process.h"

int main(int argc, char *argv[]) {
		Process process;
		pthread_t pid;
		pthread_t cid;
		std::cout<<"Starting consumer/producer example..."<<std::endl;
		while(1){
		    // create the producer and consumer threads
		    pthread_create (&pid, NULL, process.producer, NULL);
		    pthread_create (&cid, NULL, process.consumer, NULL);
		    //pthread_join(pid, NULL);
		    //pthread_join(cid, NULL);
		}
	return EXIT_SUCCESS;
}
